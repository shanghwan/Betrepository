<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="store.mapper.BetMapper">
  
    <select id="searchByBetWay" resultType="Bet">
  select * FROM bet_tb WHERE betWay =#{betWay} and state = '진행'
   </select>
  
  
  
  
  <select id="searchByBetId" parameterType="String" resultType="Bet">
  select * FROM bet_tb WHERE BetId = #{betId} 
  </select>
  
    <select id="searchByState" parameterType="String" resultType="Bet">
  select * FROM bet_tb WHERE state = #{state} 
  </select>
  
  
  
  </mapper>